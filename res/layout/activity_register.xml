<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@color/colorPrimary">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/UserNameRegister"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="UserName" android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/rounded_corners" android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/EmailRegister" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/UserNameRegister"
            app:layout_constraintStart_toStartOf="@+id/UserNameRegister" app:layout_constraintEnd_toEndOf="@+id/UserNameRegister"
            android:hint="Email" android:textStyle="bold" android:textAlignment="center"
            android:background="@drawable/rounded_corners"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/PasswordRegister" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/EmailRegister"
            app:layout_constraintStart_toStartOf="@+id/EmailRegister" app:layout_constraintEnd_toEndOf="@+id/EmailRegister"
            android:hint="Password" android:textStyle="bold" android:textAlignment="center"
            android:background="@drawable/rounded_corners"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/RegisterButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/PasswordRegister"
            app:layout_constraintEnd_toEndOf="@+id/PasswordRegister"
            app:layout_constraintStart_toStartOf="@+id/PasswordRegister"
            android:background="@drawable/rounded_button" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>